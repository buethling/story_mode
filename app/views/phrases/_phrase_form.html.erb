<%= form_for @phrase do |f| %>
  <%= render 'shared/error_messages', :object => f.object %>
   <div><input name="phrase[story_id]" type="hidden" value="<%= session[:current_story].id %>" /></div>
   <div><input name="phrase[user_id]" type="hidden" value="<%= current_user.id %>" /></div>
  <div class="field">
    <%= f.text_area :content %>
  </div>
  <div class="actions">
    <%= f.submit "Submit" %>
  </div>
<% end %>
