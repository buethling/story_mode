<div class="page-header">
  <h1>Settings</h1>
</div>
<div class="row">
  <div class="span16">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages', :object => f.object %>
      <div class="clearfix">
        <%= f.label :name %>
        <div class="input">
          <%= f.text_field :name %>
        </div>
      </div>
      <div class="clearfix">
        <%= f.label :email %>
        <div class="input">
          <%= f.text_field :email %>
        </div>
      </div>
      <div class="clearfix">
        <%= f.label :password %>
        <div class="input">
          <%= f.password_field :password %>
        </div>
      </div>
      <div class="clearfix">
        <%= f.label :password_confirmation, "Confirmation" %>
        <div class="input">
          <%= f.password_field :password_confirmation %>
        </div>
      </div>
      <div class="actions">
        <%= f.submit "Update", :class => "btn primary" %>
      </div>
    <% end %>
  </div>
</div>