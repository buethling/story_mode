<tr>
  <td class="story">
    <span class="title">Title: <%= link_to story.title, story_path(story) %></span><br />
    <span class="blurb">Blurb: <%= story.blurb %></span><br />
    <span class="timestamp">
      Posted <%= time_ago_in_words(story.created_at) %> ago.
    </span>
  </td>
  <% user = story.user rescue User.find(story.user_id) %>
  <% if current_user?(user) %>
    <td>
      <%= link_to "delete", story, :method => :delete,
                                   :confirm => "You sure?",
                                   :title => story.title %>
    </td>
  <% end %>
</tr>
