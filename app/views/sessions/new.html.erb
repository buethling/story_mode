<div class="page-header">
  <h1>Sign in</h1>
</div>
<br />
<%= form_for(:session, :url => sessions_path) do |f| %>
  <div class="clearfix">
    <%= f.label :email %>
    <div class="input">
      <%= f.text_field :email, :class => "xlarge" %>
    </div>
  </div>
  <div class="clearfix">
    <%= f.label :password %>
    <div class="input">
      <%= f.password_field :password, :class => "xlarge" %>
    </div>
  </div>
  <div class="actions">
    <%= f.submit "Sign in", :class => "btn primary" %><p class="pull-right">New user? <%= link_to "Sign up now!", signup_path %></p>
  </div>
<% end %>